<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie details</title>
</head>
<body>
    <a href="/">Home</a>
    <br>
    <a href="/movies/create">Add a Movie</a>
    <br>
    <a href="/movies/movies">Movies List</a>
    <br>
    
    <h2>Movie details</h2>

        {{#each movie}}
            {{this.title}}
            {{this.genre}}
            {{this.plot}}
            {{#each this.cast}}
            {{name}}
            {{occupation}}
            {{catchPhrase}}
            {{/each}}
            <form action="/movies/{{this._id}}/delete" method="POST">
            <button type="submit">Delete</button>
            </form>
        <hr>
        {{/each}}
        
</body>
</html>